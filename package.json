{
  "name": "hipchat-translate-dev",
  "displayName": "HipChat Translate DEV",
  "description": "Text translation inside your HipChat group! Type /translate in your chat and see how it works!",
  "version": "0.1.0",
  "author": {
    "name": "Pietro Schaff",
    "url": "https://atlassian.com"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": "^0.12.7"
  },
  "scripts": {
    "web": "node --harmony web.js",
    "web-dev": "nodemon --harmony -e js,json,css,hbs web.js"
  },
  "development": {
    "port": 3000
  },
  "production": {
    "localBaseUrl": "https://hipchat-translate.herokuapp.com",
    "redisEnv": "REDISTOGO_URL",
    "port": "$PORT"
  },
  "dependencies": {
    "ac-koa": "^0.2.6",
    "ac-koa-hipchat": "^0.2.14",
    "ac-koa-hipchat-keenio": "^0.2.0",
    "latest-version": "^2.0.0"
  }
}
